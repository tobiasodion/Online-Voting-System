@model VotingSystem.Models.Election

@{
    ViewBag.Title = "RegisterElection";
    Layout = "~/Views/Shared/_AdminPageLayout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    
    <div class="form-horizontal">
                <div class="row">
                    <div class="col-md-5 ">
                        <h1>iVote</h1>
                            <img style="display: block; margin-left: auto; margin-right: auto" src="@Url.Content("~/Images/index.jpg")" class="img-rounded" alt="iVote" width="280" height="160" />   
                     </div>
                        
                        <div class="col-md-7">
                            <h2>Register Election</h2>
                            
                            <br />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group">
                                @Html.LabelFor(model => model.ElectionName, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.ElectionName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ElectionName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ElectionStartTime, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                   @Html.EditorFor(model => model.ElectionStartTime,new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                    @Html.ValidationMessageFor(model => model.ElectionStartTime, "", new { @class = "text-danger" })
                                </div>
                            </div>
   

                            <div class="form-group">
                                @Html.LabelFor(model => model.ElectionEndTime, htmlAttributes: new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                   @Html.EditorFor(model => model.ElectionEndTime,new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                                    @Html.ValidationMessageFor(model => model.ElectionEndTime, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-5 col-md-10">
                                    <input type="submit" value="Register" class="btn btn-default" />
                                </div>
                            </div>
                            </div>
                        </div>
       
    </div>
}

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
