@model VotingSystem.Models.Candidate

@{
    ViewBag.Title = "PendingDetails";
    Layout = "~/Views/Shared/_AdminPageLayout.cshtml";
}

<h2>PendingDetails</h2>

<div style="height:220px;width:250px;">
    <h4>Candidate</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CandidatePhoto)
        </dt>

        <dd>
            @{
                var photo = @Model.CandidatePhoto;
                var base64 = Convert.ToBase64String(photo);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            }
            <img src="@imgSrc" alt="avatar" class="img-circle" height="100" width="100" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CandidateInstitution)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CandidateInstitution)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CandidateInstitutionNo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CandidateInstitutionNo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CandidateFirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CandidateFirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CandidateLastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CandidateLastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CandidateManifesto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CandidateManifesto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CandidateStatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CandidateStatus)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CandidatePosition)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CandidatePosition)
        </dd>

    </dl>
</div>

<p>
    @Html.ActionLink("Decline", "RemoveCandidate", new { id = Model.CandidateId }) |
    @Html.ActionLink("Approve", "ApproveCandidate", new { id = Model.CandidateId })
</p>
