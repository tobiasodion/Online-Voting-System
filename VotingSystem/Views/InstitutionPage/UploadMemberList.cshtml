@model VotingSystem.Models.Voter

@{
    ViewBag.Title = "UploadMemberList";
    Layout = "~/Views/Shared/_InstitutionPageLayout.cshtml";
}

<h2>UploadMemberList</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Voter</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.VoterFirstName, htmlAttributes: new { @class = "control-label col-md-2" })
