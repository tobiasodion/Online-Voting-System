@model VotingSystem.Models.Institution

@{
    ViewBag.Title = "InstitutionLogin";
    Layout = "~/Views/Shared/_LoginPageLayout.cshtml";
}

<h2>Institution</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Login</h4>
        <hr />
        
        @if (ViewBag.Message != null)
        {
            <div class="form-group">
                <div class="-col-md-10" style="color:blue;">@ViewBag.Message</div>
            </div>
        }
       
            <div class="form-group">
                @Html.LabelFor(model => model.InstitutionEmail, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.InstitutionEmail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.InstitutionEmail, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.InstitutionPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.InstitutionPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.InstitutionPassword, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-5 col-md-10" >
                    <input type="submit" value="Login" class="btn btn-default" />
                </div>
            </div>
        </div>
   
            }


            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
